@page "/allproducts"
@model IEnumerable<JP.Models.Product>

@{
    ViewData["Title"] = "allproducts";
}

<h1>All Products</h1>
<table class="table">
    <thead>
        <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Pricing</th>
                <th>Date Created</th>
                <th>Description</th>
                <th>Catagory</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
        <tr>
                <th>@Html.DisplayNameFor(model => model.ProductId)</th>
                <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                <th>@Html.DisplayNameFor(model => model.ProdcuctPrice)</th>
                <th>@Html.DisplayNameFor(model => model.createdate)</th>
                <th>@Html.DisplayNameFor(model => model.ProductDescription)</th>
                <th>@Html.DisplayNameFor(model => model.Catagory)</th>
        </tr>
        }
    </tbody>
</table>